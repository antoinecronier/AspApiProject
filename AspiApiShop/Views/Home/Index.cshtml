@model IEnumerable<AspiApiShop.Models.IndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>Nom de l'article</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.ArticleName</td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
